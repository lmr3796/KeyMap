<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="match_parent"
  android:layout_height="match_parent" android:orientation="vertical"
      android:background="@drawable/bg1" android:padding="5px">
    <LinearLayout android:layout_width="match_parent" android:id="@+id/linearLayout1" android:layout_height="wrap_content" android:orientation="horizontal" android:padding="5px">
        <Button android:layout_width="wrap_content" android:layout_height="wrap_content" android:background="@drawable/bk" android:id="@+id/back"></Button>
        <TextView android:id="@+id/textView1" android:layout_width="wrap_content" android:layout_height="wrap_content" android:textColor="#000000" android:textSize="24dip" android:text="CHECK IN"></TextView>
    </LinearLayout>
    <TextView android:id="@+id/textView2" android:padding="5px" android:layout_width="wrap_content" android:layout_height="wrap_content" android:textColor="#000" android:text="我在.." android:textSize="20dip"></TextView>
    <TextView android:id="@+id/textView3" android:layout_width="wrap_content" android:layout_height="wrap_content" android:textColor="#000000" android:padding="5px" android:text="我想說...." android:textSize="20dip"></TextView>
    <EditText android:layout_height="wrap_content" android:id="@+id/editText1" android:layout_width="match_parent" android:text="好棒的地方 :)" android:lines="5" android:gravity="top"></EditText>
    <TextView android:id="@+id/textView5" android:layout_height="wrap_content" android:textColor="#000000" android:padding="5px" android:text="心情 " android:textSize="20dip" android:layout_width="wrap_content"></TextView>
    <TableLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:id="@+id/tableLayout1">
        <TableRow android:layout_width="match_parent" android:layout_height="wrap_content" android:id="@+id/tableRow2" android:layout_gravity="center_horizontal">
            <RadioGroup
  				android:id="@+id/mood"
  				android:layout_width="wrap_content"
 				android:layout_height="wrap_content"
  				android:orientation="horizontal"
 				android:layout_span="5"
			>
			<RadioButton android:layout_width="47px" android:layout_margin="5px" android:layout_height="wrap_content" android:id="@+id/RadioButton1" android:gravity="center" android:text=" "></RadioButton>
            <RadioButton android:layout_width="47px" android:layout_margin="5px" android:layout_height="wrap_content" android:id="@+id/RadioButton2"></RadioButton>
            <RadioButton android:layout_width="47px" android:layout_margin="5px" android:layout_height="wrap_content" android:id="@+id/RadioButton3"></RadioButton>
            <RadioButton android:layout_width="47px" android:layout_margin="5px" android:layout_height="wrap_content" android:id="@+id/RadioButton4"></RadioButton>
            <RadioButton android:layout_width="47px" android:layout_margin="5px" android:layout_height="wrap_content" android:id="@+id/RadioButton5"></RadioButton>
        </RadioGroup>
        </TableRow>
        <TableRow android:layout_width="match_parent" android:layout_height="wrap_content" android:id="@+id/tableRow1">
            <Button android:layout_width="wrap_content" android:layout_height="wrap_content" android:id="@+id/button3" android:layout_margin="5px" android:background="@drawable/f1"></Button>
            <Button android:layout_width="wrap_content" android:layout_height="wrap_content" android:id="@+id/button4" android:layout_margin="5px" android:background="@drawable/f2"></Button>
            <Button android:layout_width="wrap_content" android:layout_height="wrap_content" android:id="@+id/button5" android:layout_margin="5px" android:background="@drawable/f3"></Button>
            <Button android:layout_width="wrap_content" android:layout_height="wrap_content" android:id="@+id/button6" android:layout_margin="5px" android:background="@drawable/f4"></Button>
            <Button android:layout_width="wrap_content" android:layout_height="wrap_content" android:id="@+id/button7" android:layout_margin="5px" android:background="@drawable/f5"></Button>
        </TableRow>
    </TableLayout>
    <Button android:id="@+id/button2" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_margin="5px" android:layout_gravity="center" android:text="SEND"></Button>
</LinearLayout>
