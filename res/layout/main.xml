<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_height="fill_parent"
    android:background="@drawable/bg1" android:gravity="center_vertical|center_horizontal" android:layout_width="wrap_content">
    <LinearLayout android:layout_width="fill_parent" android:id="@+id/linearLayout1" android:orientation="vertical" android:gravity="center" android:layout_height="300dip">
        <TextView android:layout_width="wrap_content" android:id="@+id/title" android:text="關鍵地圖 " android:layout_height="wrap_content" android:textSize="50dip" android:textColor="#000" android:gravity="center_vertical|center_horizontal"></TextView>
        <Button android:layout_width="wrap_content" android:id="@+id/login" android:background="@drawable/in" android:layout_height="wrap_content"></Button>
        <TextView android:layout_width="wrap_content" android:id="@+id/status" android:text="Log in" android:layout_height="wrap_content" android:textSize="14px" android:textColor="#555"></TextView>
    </LinearLayout>
    <LinearLayout android:layout_height="wrap_content" android:layout_width="fill_parent" android:id="@+id/linearLayout2" android:orientation="vertical" android:gravity="center">
        <TextView android:layout_width="wrap_content" android:id="@+id/textView4" android:layout_height="wrap_content"></TextView>
        <TextView android:layout_width="wrap_content" android:id="@+id/textView1" android:layout_height="wrap_content" android:textColor="#333" android:text="Key Map is a location-based text cloud service"></TextView>
        <TextView android:layout_width="wrap_content" android:id="@+id/textView2" android:layout_height="wrap_content" android:textColor="#444" android:text="Requirement: Facebook account,"></TextView>
        <TextView android:layout_width="wrap_content" android:id="@+id/textView3" android:text="Internet connectsion and GPS service" android:layout_height="wrap_content" android:textColor="#555"></TextView>
    </LinearLayout>
</LinearLayout>
